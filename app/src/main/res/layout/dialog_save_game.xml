<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_game_message"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/save_game_hint"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_game_format"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rgFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/format_txt" />

        <RadioButton
            android:id="@+id/rbXml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/format_xml" />

        <RadioButton
            android:id="@+id/rbJson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/format_json"
            android:checked="true" />

    </RadioGroup>

</LinearLayout>